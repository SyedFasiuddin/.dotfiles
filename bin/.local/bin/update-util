#!/bin/sh

echo "\n\
==== brew update ==============================================================\
\n"
brew update

echo "\n\
==== brew upgrade =============================================================\
\n"
brew upgrade

echo "\n\
==== brew cleanup =============================================================\
\n"
brew cleanup

echo "\n\
==== rustup update ============================================================\
\n"
rustup update

echo "\n\
==== cargo install-update -a ==================================================\
\n"
cargo install-update -a

echo "\n\
==== nvim +TSUpdate +qa =======================================================\
\n"
nvim +TSUpdate +qa

echo "\n\
==== vim +PlugUpdate +qa ======================================================\
\n"
vim +PlugUpdate +qa
