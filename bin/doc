#!/bin/sh

DOC=$HOME/Documents

case $1 in
    c)          open "$DOC/cppreference/en/c.html"          ;;
    cpp)        open "$DOC/cppreference/en/cpp.html"        ;;
    java)       open "$DOC/java-17-reference/index.html"    ;;
    java-tut)   open "$DOC/oracle-java-tut/index.html"      ;;
    python)     open "$DOC/python-3-11-docs/index.html"     ;;
    *)          echo "ERROR: no documentation for '$1'" ; exit 1
esac
