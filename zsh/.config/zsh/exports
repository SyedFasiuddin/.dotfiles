export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"

# Zoxide: Directory jumper
export _ZO_DATA_DIR="$XDG_DATA_HOME"
export _ZO_FZF_OPTS="--reverse --info=inline --height 40%"

# Java
export PATH="/opt/homebrew/opt/openjdk@17/bin:$PATH"
export CPPFLAGS="-I/opt/homebrew/opt/openjdk@17/include"
export CLASSPATH="/opt/homebrew/Cellar/tomcat/10.1.7/libexec/lib/*"
export CLASSPATH="$CLASSPATH:$HOME/Developer/Java/jar-dependencies/*"

# Less: Pager
export LESS_TERMCAP_mb=$'\E[1;31m'
export LESS_TERMCAP_md=$'\E[1;36m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;33m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_us=$'\E[1;32m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESSHISTFILE="$XDG_CACHE_HOME/.less_history"

# MySQL
export MYSQL_HISTFILE="$XDG_CACHE_HOME/.mysql_history"

# Abduco: Session management
export ABDUCO_SOCKET_DIR="/tmp"

# fnm: NodeJS version manager written in Rust
export FNM_DIR="$HOME/Developer/JS/.fnm"
export NODE_REPL_HISTORY="$XDG_CACHE_HOME/.node_repl_history"
export NODE_REPL_HISTORY_SIZE=1000000000
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"

# pyenv: Python version manager
export PYENV_ROOT="$HOME/Developer/Python/.pyenv"
export PYENV_VERSION="3.10.10"
export PATH="$PYENV_ROOT/bin:$PATH"
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc"
export JUPYTER_CONFIG_DIR="$HOME/Developer/Python/.jupyter"
export JUPYTER_DATA_DIR="$XDG_DATA_HOME/jupyter"
export IPYTHONDIR="$HOME/Developer/Python/.ipython"

# bob: nvim version manager
export PATH="$XDG_DATA_HOME/bob/nvim-bin:$PATH"

# Rust
export CARGO_HOME="$HOME/Developer/Rust/.cargo"
export RUSTUP_HOME="$HOME/Developer/Rust/.rustup"
export RUSTC_WRAPPER="$CARGO_HOME/bin/sccache"
export SCCACHE_DIR="$XDG_CACHE_HOME/sccache"

# fzf
export FZF_DEFAULT_OPTS="$_ZO_FZF_OPTS"
export FZF_COMPLETION_OPTS="$FZF_DEFAULT_OPTS"
export FZF_DEFAULT_COMMAND="fd -H -E .git"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# Docker
export PATH="$HOME/.docker/bin:$PATH"

# Misc
export PATH="$HOME/.local/bin:$PATH"
export LANG=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8

