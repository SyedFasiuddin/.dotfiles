# listing
alias ls="eza"
alias la="eza -aFx"
alias ll="eza -laF --icons=never"

# tmux
alias t="tmux"
alias ta="tmux a"
alias tls="tmux ls"

# git
alias ga="git add"
alias gb="git branch"
alias gc="git commit"
alias gcl="git clone"
alias gcld1="git clone --depth=1"
alias gco="git checkout"
alias gd="git diff"
alias gl1="git log --oneline"
alias glog="git log --all --oneline --decorate --graph --color"
alias gp="git pull"
alias gP="git push"
alias gs="git status"

# Editors
alias v="nvim"
alias ed="ed -p\"ed: \""

# Misc
alias :q="echo noob"
alias wget="wget --no-hsts \
    --ca-certificate=$HOMEBREW_PREFIX/share/ca-certificates/cacert.pem"

# vim: set ft=sh:
